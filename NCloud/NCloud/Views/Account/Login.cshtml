@model NCloud.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-light text-dark border border-3 border-primary" style="border-radius: 1rem;">
                <div class="card-body px-5 pt-3 pb-5 text-center">
                    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@(ViewBag.ReturnUrl ?? "/DashBoard/Index")">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <img src="~/utilities/cloud_logo.png" width="200" class="ms-2" />
                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your Username and Password!</p>
                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="UserName"></label>
                                <input asp-for="UserName" id="typeEmailX" class="form-control form-control-lg" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="Password"></label>
                                <input type="password" asp-for="Password" id="typePasswordX" class="form-control form-control-lg" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button class="btn btn-primary btn-lg px-5" type="submit">Login</button>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div>
                            <p class="mb-0">
                                Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary-50 fw-bold">Sign Up</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
