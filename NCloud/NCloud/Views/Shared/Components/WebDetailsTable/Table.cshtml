@model WebDetailsViewModel

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (CloudFolder? item in Model.Folders)
        {
            if (item != null)
            {
                <tr>
                    <td>
                        @if (item.Info is not null)
                        {
                            <details>
                                <summary>
                                    <span id="iconforitemtype">
                                        <img src="@item.IconPath" width="20" height="20" class="item align-bottom">
                                    </span>
                                    <a asp-action="Details" asp-route-path="@Model.CurrentPath" asp-route-folderName="@item.Info!.Name" class="itemlink">@item.Info.Name</a>
                                </summary>
                                <fieldset class="border border-dark p-2 m-2 rounded">
                                    <legend class="btn btn-outline-primary rounded-pill w-auto">Details</legend>
                                    <table class="table table-striped rounded">
                                        <tr>
                                            <td>
                                                Created Time
                                            </td>
                                            <td>
                                                @item.Info.CreationTime
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Last Modified Time
                                            </td>
                                            <td>
                                                @item.Info.LastWriteTime
                                            </td>
                                        </tr>
                                    </table>
                                </fieldset>
                                <div class="d-flex justify-content-end">
                                    <div class="btn-group me-2" role="group">
                                        <a asp-controller="Web" class="btn btn-primary" asp-action="DownloadFolder" asp-route-path="@Model.CurrentPath" asp-route-folderName="@item.Info.Name"><img src="~/utilities/cloud-download.svg" width=" 20" height="20" class="rounded align-middle" download /></a>
                                    </div>
                                </div>
                            </details>
                        }
                        else
                        {
                            <div>
                                <span id="iconforitemtype">
                                    <img src="@item.IconPath" width="20" height="20" class="item align-bottom">
                                </span>
                                <a asp-action="Details" asp-route-path="@Model.CurrentPath" asp-route-folderName="@item.SharedName" class="itemlink">@item.SharedName</a>
                            </div>
                        }
                    </td>
                </tr>
            }
        }
        @foreach (CloudFile? item in Model.Files)
        {
            if (item != null)
            {
                <tr>
                    <td>
                        @if (item.Info is not null)
                        {
                            <details>
                                <summary>
                                    <span id="iconforitemtype">
                                        <img src="@item.IconPath" width="20" height="20" class="item align-bottom">
                                    </span>
                                    <span class="itemlink">@item.Info.Name</span>
                                </summary>
                                <fieldset class="border border-dark p-2 m-2 rounded">
                                    <legend class="btn btn-outline-primary rounded-pill w-auto">Details</legend>
                                    <table class="table table-striped rounded">
                                        <tr>
                                            <td>
                                                Created Time
                                            </td>
                                            <td>
                                                @item.Info.CreationTime
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Last Modified Time
                                            </td>
                                            <td>
                                                @item.Info.LastWriteTime
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Size
                                            </td>
                                            <td>
                                                @item.Info.Length Byte(s)
                                            </td>
                                        </tr>
                                    </table>
                                </fieldset>
                                <div class="d-flex justify-content-end">
                                    <div class="btn-group me-2" role="group">
                                        <a asp-controller="Web" class="btn btn-primary" asp-action="DownloadFile" asp-route-path="@Model.CurrentPath" asp-route-fileName="@item.Info.Name"><img src="~/utilities/cloud-download.svg" width=" 20" height="20" class="rounded align-middle" download /></a>
                                    </div>
                                </div>
                            </details>
                        }
                        else
                        {
                            <div>
                                <span id="iconforitemtype">
                                    <img src="@item.IconPath" width="20" height="20" class="item align-bottom">
                                </span>
                                <a asp-action="Details" asp-route-path="@Model.CurrentPath" asp-route-folderName="@item.SharedName" class="itemlink">@item.SharedName</a>
                            </div>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if(Model.Files?.Count == 0 && Model.Folders?.Count == 0)
{
    <span class="w-100 d-flex justify-content-center text-muted fst-italic">No shared items</span>
}