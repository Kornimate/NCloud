@model DriveDetailsViewModel

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (CloudFolder? item in Model.Folders)
        {
            if (item != null)
            {
                <tr>
                    <td>
                        <details>
                            <summary>
                                <span id="iconforitemtype">
                                    <img src="@item.IconPath" width=" 20" height="20" class="item align-bottom">
                                </span>
                                <a asp-action="Details" asp-route-folderName="@item.Info.Name" class="itemlink">@item.Info!.Name</a>
                            </summary>
                            <fieldset class="border border-dark p-2 m-2 rounded">
                                <legend class="btn btn-outline-primary rounded-pill w-auto">Details</legend>
                                <table class="table table-striped rounded">
                                    <tr>
                                        <td>
                                            Created By
                                        </td>
                                        <td>
                                            No Data
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Created Time
                                        </td>
                                        <td>
                                            @item.Info.CreationTime
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Last Modified Time
                                        </td>
                                        <td>
                                            @item.Info.LastWriteTime
                                        </td>
                                    </tr>
                                </table>
                            </fieldset>
                            @* @if (item.Owner == User.Identity!.Name&& ViewBag.CanUseActions is not null && ViewBag.CanUseActions == true)
                            {
                                <div class="d-flex justify-content-end">
                                    <div class="btn-group mx-2" role="group">
                                        <button type="button" class="btn btn-primary"><a asp-controller="Sharing" asp-action="Settings" asp-route-id="@item.Info.Name"><img src="~/utilities/gear.svg" width=" 20" height="20" class="rounded-circle align-middle" /></a></button>
                                        <button type="button" class="btn btn-danger"><a asp-controller="Sharing" asp-action="HideFolder" asp-route-id="@item.Info.Name"><img src="~/utilities/disconnect.svg" width=" 20" height="20" class="rounded-circle align-middle" /></a></button>
                                    </div>
                                </div>
                            } *@
                        </details>
                    </td>
                </tr>
            }
        }
        @foreach (CloudFile? item in Model.Files)
        {
            if (item != null)
            {
                <tr>
                    <td>
                        <details>
                            <summary>
                                <span id="iconforitemtype">
                                    <img src="@item.IconPath" width=" 20" height="20" class="item align-bottom">
                                </span>
                                <span class="itemlink">@item.Info!.Name</span>
                            </summary>
                            <fieldset class="border border-dark p-2 m-2 rounded">
                                <legend class="btn btn-outline-primary rounded-pill w-auto">Details</legend>
                                <table class="table table-striped rounded">
                                    <tr>
                                        <td>
                                            Created By
                                        </td>
                                        <td>
                                            No Data
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Created Time
                                        </td>
                                        <td>
                                            @item.Info.CreationTime
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Last Modified Time
                                        </td>
                                        <td>
                                            @item.Info.LastWriteTime
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Size
                                        </td>
                                        <td>
                                            @item.Info.Length Bytes
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Public
                                        </td>
                                        <td>
                                            @if (item.IsConnectedToApp)
                                            {
                                                <span>✔</span>
                                            }
                                            else
                                            {
                                                <span>❌</span>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </fieldset>
                            @* @if (item.Owner == User.Identity!.Name && ViewBag.CanUseActions is not null && ViewBag.CanUseActions == true)
                            {
                                <div class="d-flex justify-content-end">
                                    <div class="btn-group mx-2" role="group">
                                        <button type="button" class="btn btn-primary"><a asp-controller="Sharing" asp-action="Settings" asp-route-id="@item.Info.Name"><img src="~/utilities/gear.svg" width=" 20" height="20" class="rounded-circle align-middle" /></a></button>
                                        <button type="button" class="btn btn-danger"><a asp-controller="Sharing" asp-action="HideFile" asp-route-id="@item.Info.Name"><img src="~/utilities/disconnect.svg" width=" 20" height="20" class="rounded-circle align-middle" /></a></button>
                                    </div>
                                </div>
                            } *@
                        </details>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>