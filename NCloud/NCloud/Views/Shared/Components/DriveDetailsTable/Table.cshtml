@model DriveDetailsViewModel

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (CloudFolder? item in Model.Folders)
        {
            if (item != null)
            {
                <tr>
                    <td>
                        <details>
                            <summary>
                                <span id="iconforitemtype">
                                    <img src="@item.IconPath" width=" 20" height="20" class="item align-center">
                                </span>
                                <a asp-action="Details" asp-route-folderName="@item.Info.Name" class="itemlink">@item.Info!.Name</a>
                            </summary>
                            <fieldset class="border border-dark p-2 m-2 rounded">
                                <legend class="btn btn-outline-primary rounded-pill w-auto">Details</legend>
                                <table class="table table-striped rounded">
                                    <tr>
                                        <td class="ps-3">
                                            Created By
                                        </td>
                                        <td>
                                            @User.Identity?.Name
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="ps-3">
                                            Created Time
                                        </td>
                                        <td>
                                            @item.Info.CreationTime
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="ps-3">
                                            Last Modified Time
                                        </td>
                                        <td>
                                            @item.Info.LastWriteTime
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="ps-3">
                                            Shared in @Constants.AppName
                                        </td>
                                        <td>
                                            @if (item.IsConnectedToApp)
                                            {
                                                <span>✔</span>
                                            }
                                            else
                                            {
                                                <span>❌</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="ps-3">
                                            Public
                                        </td>
                                        <td>
                                            @if (item.IsConnectedToWeb)
                                            {
                                                <span>✔</span>
                                            }
                                            else
                                            {
                                                <span>❌</span>
                                            }
                                        </td>
                                    </tr>
                                    @if (item.IsConnectedToWeb)
                                    {
                                        string? url = Url.Action(Model.WebControllerAndActionForDetails.Second, Model.WebControllerAndActionForDetails.First, new { path = item.HashedPath }, Context.Request.Scheme);
                                        <tr class="align-middle">
                                            <td>
                                                <button type="button" class="btn btn-outline-dark" onclick="copyToClipBoard(@url)"><span>Url</span><img src="/utilities/link.svg" width=" 20" height="20" class="ms-2 item rounded align-center"></button>
                                            </td>
                                            <td>
                                                <a href="@url" class="text-decoration-none">@url</a>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </fieldset>
                            <div class="d-flex justify-content-end">
                                <div class="btn-group mx-2" role="group">
                                    @if (item.IsConnectedToWeb)
                                    {
                                        <a asp-controller="Drive" class="btn btn-primary "asp-action="DisconnectDirectoryFromWeb" asp-route-directoryName="@item.Info.Name"><img src="~/utilities/nopublic.svg" width=" 20" height="20" class="rounded align-middle" /></a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Drive" class="btn btn-primary "asp-action="ConnectDirectoryToWeb" asp-route-directoryName="@item.Info.Name"><img src="~/utilities/public.svg" width=" 20" height="20" class="rounded align-middle" /></a>
                                    }
                                    @if (item.IsConnectedToApp)
                                    {
                                        <a asp-controller="Drive" class="btn btn-secondary "asp-action="DisconnectDirectoryFromApp" asp-route-directoryName="@item.Info.Name"><img src="~/utilities/noshare.svg" width=" 20" height="20" class="rounded align-middle" /></a>   
                                    }
                                    else
                                    {
                                        <a asp-controller="Drive" class="btn btn-secondary "asp-action="ConnectDirectoryToApp" asp-route-directoryName="@item.Info.Name"><img src="~/utilities/share.svg" width=" 20" height="20" class="rounded align-middle" /></a>  
                                    }
                                    <a asp-controller="Drive" class="btn btn-secondary "asp-action="Settings" asp-route-id="@item.Info.Name"><img src="~/utilities/gear.svg" width=" 20" height="20" class="rounded align-middle" /></a>
                                    <a asp-controller="Drive" class="btn btn-danger "asp-action="DeleteFolder" asp-route-folderName="@item.Info.Name"><img src="~/utilities/trash.svg" width=" 20" height="20" class="rounded align-middle" /></a>
                                </div>
                            </div>
                        </details>
                    </td>
                </tr>
            }
        }
        @foreach (CloudFile? item in Model.Files)
        {
            if (item != null)
            {
                <tr>
                    <td>
                        <details>
                            <summary>
                                <span id="iconforitemtype">
                                    <img src="@item.IconPath" width=" 20" height="20" class="item align-center">
                                </span>
                                <span class="itemlink">@item.Info!.Name</span>
                            </summary>
                            <fieldset class="border border-dark p-2 m-2 rounded">
                                <legend class="btn btn-outline-primary rounded-pill w-auto">Details</legend>
                                <table class="table table-striped rounded">
                                    <tr>
                                        <td class="ps-3">
                                            Created By
                                        </td>
                                        <td>
                                            @User.Identity?.Name
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="ps-3">
                                            Created Time
                                        </td>
                                        <td>
                                            @item.Info.CreationTime
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="ps-3">
                                            Last Modified Time
                                        </td>
                                        <td>
                                            @item.Info.LastWriteTime
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="ps-3">
                                            Size
                                        </td>
                                        <td>
                                            @item.Info.Length Byte(s)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="ps-3">
                                            Shared in @Constants.AppName
                                        </td>
                                        <td>
                                            @if (item.IsConnectedToApp)
                                            {
                                                <span>✔</span>
                                            }
                                            else
                                            {
                                                <span>❌</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="ps-3">
                                            Public
                                        </td>
                                        <td>
                                            @if (item.IsConnectedToWeb)
                                            {
                                                <span>✔</span>
                                            }
                                            else
                                            {
                                                <span>❌</span>
                                            }
                                        </td>
                                    </tr>
                                    @if (item.IsConnectedToWeb)
                                    {
                                        string? url = Url.Action(Model.WebControllerAndActionForDownload.Second, Model.WebControllerAndActionForDownload.First, new { path = System.IO.Path.Combine(Model.CurrentPath,item.Info.Name) }, Context.Request.Scheme);
                                        <tr class="align-middle">
                                            <td>
                                                <button type="button" class="btn btn-outline-dark" onclick="copyToClipBoard(@url)"><span>Download</span><img src="/utilities/link.svg" width=" 20" height="20" class="ms-2 item rounded align-center"></button>
                                            </td>
                                            <td>
                                                <a href="@url" class="text-decoration-none">@url</a>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </fieldset>
                            <div class="d-flex justify-content-end">
                                <div class="btn-group mx-2" role="group">
                                    @if (item.IsConnectedToWeb)
                                    {
                                        <a asp-controller="Drive" class="btn btn-primary "asp-action="DisconnectFileFromWeb" asp-route-fileName="@item.Info.Name"><img src="~/utilities/nopublic.svg" width=" 20" height="20" class="rounded align-middle" /></a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Drive" class="btn btn-primary "asp-action="ConnectFileToWeb" asp-route-fileName="@item.Info.Name"><img src="~/utilities/public.svg" width=" 20" height="20" class="rounded align-middle" /></a>
                                    }
                                    @if (item.IsConnectedToApp)
                                    {
                                        <a asp-controller="Drive" class="btn btn-secondary "asp-action="DisconnectFileFromApp" asp-route-fileName="@item.Info.Name"><img src="~/utilities/noshare.svg" width=" 20" height="20" class="rounded align-middle" /></a>   
                                    }
                                    else
                                    {
                                        <a asp-controller="Drive" class="btn btn-secondary "asp-action="ConnectFileToApp" asp-route-fileName="@item.Info.Name"><img src="~/utilities/share.svg" width=" 20" height="20" class="rounded align-middle" /></a>  
                                    }
                                    <a asp-controller="Editor" class="btn btn-secondary" asp-action="Index" asp-route-fileName="@item.Info.Name"><img src="~/utilities/code-slash.svg" width=" 20" height="20" class="rounded align-middle" /></a>
                                    <a asp-controller="Drive" class="btn btn-secondary"asp-action="Settings" asp-route-id="@item.Info.Name"><img src="~/utilities/gear.svg" width=" 20" height="20" class="rounded align-middle" /></a>
                                    <a asp-controller="Drive" class="btn btn-danger"asp-action="DeleteFile" asp-route-id="@item.Info.Name"><img src="~/utilities/trash.svg" width=" 20" height="20" class="rounded align-middle" /></a>
                                </div>
                            </div>
                        </details>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<script type="text/javascript">
    function copyToClipBoard(url){
        navigator.clipboard.writeText(url);
    }
</script>