<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Constants.AppName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/lib/select2/theme/select2-bootstrap-5-theme.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NCloud.styles.css" asp-append-version="true" />
</head>
<body>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>

    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 background-color border border-dark fixed navwidth">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-dark min-vh-100">
                    <div class="d-flex align-items-center pb-3 mb-md-0 me-md-auto">
                        <span class="fs-5 d-none d-sm-inline align-middle justify-content-center"><img src="/utilities/cloud_logo_no_text.png" alt="cloudlogo" class="me-3 logo"></span>
                    </div>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item my-2">
                            <a asp-controller="DashBoard" asp-action="Index" class="align-middle px-0 text-decoration-none text-dark">
                                <span class="d-inline m-1"><img src="~/utilities/speedometer.svg" width="20" height="20" class="rounded-circle" /></span> <span class="ms-1 d-none d-sm-inline">DashBoard</span>
                            </a>
                        </li>
                        <li class="nav-item my-2">
                            <a asp-controller="Drive" asp-action="Details" class="align-middle px-0 text-decoration-none text-dark">
                                <span class="d-inline m-1"><img src="~/utilities/files.svg" width="20" height="20" class="rounded" /></span> <span class="ms-1 d-none d-sm-inline">Cloud Files</span>
                            </a>
                        </li>
                        <li class="nav-item my-2">
                            <a asp-controller="Sharing" asp-action="Details" class="align-middle px-0 text-decoration-none text-dark">
                                <span class="d-inline m-1"><img src="~/utilities/cloud.svg" width="20" height="20" class="rounded" /></span> <span class="ms-1 d-none d-sm-inline">Shared Files</span>
                            </a>
                        </li>
                        <li class="nav-item my-2">
                            <a asp-controller="Editor" asp-action="Index" class="align-middle px-0 text-decoration-none text-dark">
                                <span class="d-inline m-1"><img src="~/utilities/editor-general.svg" width="20" height="20" class="rounded" /></span> <span class="ms-1 d-none d-sm-inline">Editors</span>
                            </a>
                        </li>
                        <li class="nav-item my-2">
                            <a asp-controller="Terminal" asp-action="Index" class="align-middle px-0 text-decoration-none text-dark">
                                <span class="d-inline m-1"><img src="~/utilities/terminal.svg" width="20" height="20" class="rounded" /></span> <span class="ms-1 d-none d-sm-inline">Terminal</span>
                            </a>
                        </li>
                    </ul>
                    <a asp-action="Index" asp-controller="Account" asp-route-returnUrl="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.PathBase}{Context.Request.Path}{Context.Request.QueryString}")" class="text-dark text-decoration-none w-100 mb-3">
                        <div class="p-2 d-flex justify-content-center w-100 border border-3 rounded border-dark user-button">
                            <div>
                                <img src="/utilities/person-circle.svg" alt="profile_icon" width="30" height="30" class="rounded-circle m-1">
                                <span class="d-inline m-1">User</span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col py-3 maindiv">
                @RenderBody()
            </div>
        </div>
    </div>

    @await Component.InvokeAsync("CloudNotification")

    @await Component.InvokeAsync("CloudNotificationSingle")

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>